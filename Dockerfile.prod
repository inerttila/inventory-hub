FROM node:18-alpine AS builder

WORKDIR /app
RUN apk add --no-cache python3 make g++
COPY package.json ./
COPY package-lock.json* ./
RUN npm ci || npm install
COPY server ./server
FROM node:18-alpine

WORKDIR /app
RUN apk add --no-cache python3 make g++
COPY package.json ./
COPY package-lock.json* ./
RUN npm ci --only=production || npm install --only=production

EXPOSE 5000
CMD ["npm", "start"]
